{% trans_default_domain 'FOSUserBundle' %}
				<!-- BEGIN register-form -->
				{{ form_errors(form.email) }}

				{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), "attr":{'id': form.vars.id}} ) }}
					{{form_widget(form._token)}}
					<!-- BEGIN row -->
					<div class="row row-space-20">
						<!-- BEGIN col-6 -->
						<div class="col-md-6">
							<div class="form-group register_form">
								<label class="control-label">Civilité <span class="text-danger">*</span></label>
								<div style="height:34px;padding-top:6px">
								{% for child in form.civility.children %}
								<div class="radio-inline">
									<input type="radio" name="{{child.vars.full_name}}" id="{{child.vars.id}}" value="{{child.vars.value}}" {% if child.vars.checked %} checked {% endif %} required="required"/>
									<label for="{{child.vars.id}}">{{child.vars.label}}</label>
								</div>
								{% endfor %}
								</div>
								<label id="{{form.civility.vars.id}}-error" class="label-error" for="{{form.civility.vars.id}}"></label>
							</div>
							<div class="form-group register_form">
								<label class="control-label">Prénom<span class="text-danger">*</span></label>
								{{form_widget(form.firstname,{'attr':{'class':'form-control has-error'}})}}
								<label id="{{form.firstname.vars.id}}-error" class="label-error" for="fos_user_registration_form_firstname"></label>
								
							</div>
							<div class="form-group register_form">
								<label class="control-label">Nom<span class="text-danger">*</span></label>
								{{form_widget(form.lastname,{'attr':{'class':'form-control'}})}}
								<label id="{{form.lastname.vars.id}}-error" class="label-error" for="fos_user_registration_form_firstname"></label>
							</div>
							
							<div class="form-group register_form {% if form.children.email.vars.errors %}has-error{% endif %}">
								<label class="control-label" for={{form.email.vars.id}}>Addresse mail <span class="text-danger">*</span></label>
								{{form_widget(form.email,{'attr':{'class':'form-control'}})}}
								<label id="{{form.email.vars.id}}-error" class="label-error" for="fos_user_registration_form_firstname"></label>
							</div>
						</div>
						<!-- END col-6 -->
						<!-- BEGIN col-6 -->
						<div class="col-md-6">
							<div class="form-group register_form">
								<label class="control-label">Nom d'utilisateur <span class="text-danger">*</span></label>
								{{form_widget(form.username,{'attr':{'class':'form-control'}})}}
								<label id="{{form.username.vars.id}}-error" class="label-error" for="fos_user_registration_form_firstname"></label>
							</div>
							<div class="form-group register_form">
								<label class="control-label">Mot de passe <span class="text-danger">*</span></label>
								{{form_widget(form.plainPassword.first,{'attr':{'class':'form-control'}})}}
								<label id="{{form.plainPassword.first.vars.id}}-error" class="label-error" for="fos_user_registration_form_firstname"></label>
							</div>
							<div class="form-group register_form">
								<label class="control-label">Confirmation du mot de passe <span class="text-danger">*</span></label>
								{{form_widget(form.plainPassword.second,{'attr':{'class':'form-control'}})}}
								<label id="{{form.plainPassword.second.vars.id}}-error" class="label-error" for="fos_user_registration_form_firstname"></label>
							</div>
							<div class="form-group register_form">
								<label class="control-label">Téléphone <span class="text-danger">*</span></label>
								{{form_widget(form.phone,{'attr':{'class':'form-control'}})}}
								<label id="{{form.phone.vars.id}}-error" class="label-error" for="fos_user_registration_form_firstname"></label>
							</div>
						</div>
						<!-- END col-6 -->
					</div>
					<!-- END row -->
					
					<button type="submit" class="btn btn-primary">Inscrivez vous</button>
					<div class="m-t-20">
						Vous avez déja un compte ? <a href="{{path('fos_user_security_login')}}">Connectez-vous</a>
					</div>
				</form>
				<!-- END register-form -->