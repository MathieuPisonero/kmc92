<!-- BEGIN tab-pane -->
<div class="tab-pane fade active in" id="tab-left-home">
	<p class="desc mw-100">Retrouvez les informations associés à votre profil</p>
	<div style="width:100%"></div>
	{{ form_start(form, {'method': 'post', "attr":{'id': form.vars.id, 'class':"form-horizontal mw-100"}} ) }}
		{{form_widget(form._token)}}
		<div class="form-group">
			<label class="control-label">Pseudo <span class="text-danger">*</span></label>
			{{form_widget(form.username,{'attr':{'class':'form-control'}})}}
		</div>
	   	<div class="form-group">
	    	<label class="control-label">Civilité <span class="text-danger">*</span></label>
	    	{% for child in form.civility.children %}
			<div class="radio-inline m-b-3"">
				<input type="radio" name="{{child.vars.full_name}}" id="{{child.vars.id}}" value="{{child.vars.value}}" {% if child.vars.checked %} checked {% endif %} required="required"/>
				<label for="{{child.vars.id}}">{{child.vars.label}}</label>
			</div>
			{% endfor %}
		</div>
	    <div class="form-group">
			<label class="control-label">Prénom <span class="text-danger">*</span></label>
			{{form_widget(form.firstname,{'attr':{'class':'form-control'}})}}
		</div>
		<div class="form-group">
			<label class="control-label">Nom <span class="text-danger">*</span></label>
			{{form_widget(form.lastname,{'attr':{'class':'form-control'}})}}
		</div>
		<div class="form-group">
			<label class="control-label">E-mail<span class="text-danger">*</span></label>
			{{form_widget(form.email,{'attr':{'class':'form-control'}})}}
		</div>
		<div class="form-group">
			<label class="control-label">Téléphone<span class="text-danger">*</span></label>
			{{form_widget(form.phone,{'attr':{'class':'form-control'}})}}
		</div>
		<button type="submit" class="btn btn-primary">enregistrer</button>
	</form>
</div>
<!-- END tab-pane -->